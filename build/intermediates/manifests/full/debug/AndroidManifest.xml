<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.oskard.finalproject"
    android:versionCode="4"
    android:versionName="1.03" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="me.oskard.finalproject.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.oskard.finalproject.LoginRegisterActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_login_register"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="me.oskard.finalproject.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="me.oskard.finalproject.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="me.oskard.finalproject.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:parentActivityName="me.oskard.finalproject.LoginActivity" >
        </activity>
        <activity
            android:name="me.oskard.finalproject.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
    </application>

</manifest>