<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.oskard.finalproject.RegisterActivity"
    android:background="@color/background_color" >
    
    <TextView
        android:id="@+id/new_username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/username"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/new_username_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/new_username_tv"
        android:ems="10"
        android:textColor="@color/text_color" >

        <requestFocus />
    </EditText>
    
    <TextView
        android:id="@+id/new_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/new_username_et"
        android:text="@string/email"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/new_email_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/new_email_tv"
        android:ems="10"
        android:textColor="@color/text_color" />

    <TextView
        android:id="@+id/new_password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/new_email_et"
        android:text="@string/password"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/new_password_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/new_password_tv"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/text_color" />
    
    <TextView
        android:id="@+id/new_repeat_password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/new_password_et"
        android:text="@string/repeat_password"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/new_repeat_password_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/new_repeat_password_tv"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/text_color" />

    <TextView
        android:id="@+id/login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="goLoginPressed"
        android:text="@string/already_have_account"
        android:textColor="@color/text_color" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/new_repeat_password_et"
        android:layout_marginTop="70dp"
        android:onClick="registerPressed"
        android:text="@string/register"
        android:textColor="@color/text_color" />

</RelativeLayout>
